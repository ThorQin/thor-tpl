{
  "name": "thor-tpl",
  "version": "1.1.7",
  "description": "A simple JS Template Engine",
  "main": "./dist/cjs/index.js",
  "exports": "./dist/esm/index.mjs",
  "author": "Thor Qin",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://gitee.com/thor.qin/thor-tpl.git"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.33.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5",
    "typescript": "^3.9.2",
    "renamer": "^2.0.1"
  },
  "scripts": {
    "build-esm": "tsc --outDir ./dist/esm  -P tsconfig.json && renamer --find js --replace mjs \"./dist/esm/**\"",
    "build-cjs": "tsc --module commonjs --outDir ./dist/cjs -P tsconfig.json",
    "build": "rm -rf ./dist/* && npm run build-esm && npm run build-cjs",
    "postbuild": "prettier --write ./dist"
  },
  "dependencies": {}
}
